mobile-cutoff = 400px
desktop-cutoff = 1024px

below(max)
  condition = 'only screen and (max-width: %s)' % max
  @media condition
    {block}

above(min)
  condition = 'only screen and (min-width: %s)' % min
  @media condition
    {block}

between(min, max)
  condition = 'only screen and (min-width: %s) and (max-width: %s)' % (min max)
  @media condition
    {block}

mobile()
  condition = 'only screen and (max-width: %s)' % mobile-cutoff
  @media condition
    {block}

tablet()
  condition = 'only screen and (min-width: %s) and (max-width: %s)' % (mobile-cutoff desktop-cutoff)
  @media condition
    {block}

desktop()
  condition = 'only screen and (min-width: %s)' % desktop-cutoff
  @media condition
    {block}

retina()
  @media (min-resolution: 1.5dppx), (-webkit-min-device-pixel-ratio: 1.5), (min--moz-device-pixel-ratio: 1.5), (min-resolution: 144dpi)
    {block}
